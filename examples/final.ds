// interface.sp
interface Person {
  name::str;
  age::num;
  tags::arr<str>;
  meta::obj;
}

// variables y tipos
let name::str = "Juan";
let age::num = 30;
let isActive::mbool = maybe;
let scores::arr<num> = [95, 87, 92];
let person::Person = {
  name: "Maria",
